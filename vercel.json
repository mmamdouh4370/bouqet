{
    "version": 2,
    "builds": [
      {
        "src": "src/backend/main.py",
        "use": "@vercel/python"
      },
      {
        "src": "src/frontend/next.config.js",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/src/backend/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "/src/frontend/$1"
      }
    ]
  }
  